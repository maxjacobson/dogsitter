#!/usr/bin/env ruby

require 'active_support/all'
require 'yaml'

Time.zone = 'America/New_York'

data = YAML.load_file('./_data/properties.yml')

today = Time.zone.now.strftime('%b %d, %Y')

if data['available']
  File.write('./_data/properties.yml', { 'available' => false }.to_yaml)
else
  File.write('./_data/properties.yml', { 'available' => true, 'date' => today }.to_yaml)
end
